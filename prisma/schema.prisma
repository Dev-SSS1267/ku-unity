generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model linkdata {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  pagedataid   String?   @db.ObjectId
  iconClass    String?
  displayText  String?
  linkUrl      String?
  bgColor      String?
  borderRadius String?
  textColor    String?
  accentColor  String?
  active       Boolean?  @default(true)
  created_at   DateTime? @default(now())
  pagedata     pagedata? @relation(fields: [pagedataid], references: [id])
  orderIndex   Int       @default(0)
}

model socialdata {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  pagedataid   String?   @db.ObjectId
  iconClass    String?
  linkUrl      String?
  bgColor      String?
  borderRadius String?
  accentColor  String?
  active       Boolean?  @default(true)
  created_at   DateTime? @default(now())
  pagedata     pagedata? @relation(fields: [pagedataid], references: [id])
  orderIndex   Int       @default(0)
}

model pagedata {
  id                          String       @id @default(auto()) @map("_id") @db.ObjectId
  avatarUrl                   String?
  avatarheight                String?
  avatarwidth                 String?
  avatarBorderColor           String?
  bgColor                     String?
  accentColor                 String?
  handlerText                 String?
  handlerLink                 String?
  footerText                  String?
  footerTextColor             String?
  footerBgColor               String?
  footerTextSize              String?
  bgImgUrl                    String?
  handlerFontSize             String?
  handlerFontColor            String?
  active                      Boolean?     @default(true)
  fontFamily                  String?
  fontUrl                     String?
  created_at                  DateTime?    @default(now())
  linkdata                    linkdata[]
  socialdata                  socialdata[]
  handlerDescription          String?
  handlerDescriptionFontColor String?
  footerEnabled               Boolean?     @default(true)
  linkPadding                 String?
  linktreeWidth               String?
}

model users {
  id         String    @id @default(auto()) @map("_id") @db.ObjectId
  username   String    @unique
  password   String
  created_at DateTime? @default(now())
}
